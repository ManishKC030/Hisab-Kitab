<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- ðŸ”¥ FULL BACKGROUND CARD -->
        <LinearLayout
            android:id="@+id/bgIncomeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Income"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="20dp"/>

            <!-- ðŸ’° Amount -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textColor="#94A3B8"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etIncomeAmount"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bg_input_curved"
                android:hint="Enter amount"
                android:textColor="#FFFFFF"
                android:textColorHint="#64748B"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:layout_marginBottom="20dp"/>

            <!-- ðŸ“ Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="#94A3B8"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etIncomeTitle"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bg_input_curved"
                android:hint="Salary, Freelance, Business..."
                android:textColor="#FFFFFF"
                android:textColorHint="#64748B"
                android:padding="15dp"
                android:layout_marginBottom="20dp"/>

            <!-- ðŸ“… Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="#94A3B8"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etIncomeDate"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bg_input_curved"
                android:hint="Select date"
                android:textColor="#FFFFFF"
                android:textColorHint="#64748B"
                android:focusable="false"
                android:clickable="true"
                android:padding="15dp"
                android:layout_marginBottom="20dp"/>

            <!-- ðŸ· Category -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="#94A3B8"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:id="@+id/incomeCategoryContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Example Category -->
                    <TextView
                        android:id="@+id/catSalary"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Salary"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_category_unselected"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:id="@+id/catBusiness"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Business"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_category_unselected"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:id="@+id/catFreelance"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Freelance"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_category_unselected"
                        android:layout_marginEnd="10dp"/>

                    <!-- âž• Add New Category -->
                    <TextView
                        android:id="@+id/catAddNew"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="+ Add"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:textColor="#22C55E"
                        android:background="@drawable/bg_category_add"/>
                </LinearLayout>

            </HorizontalScrollView>

            <!-- ðŸ“ Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#94A3B8"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etIncomeDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bg_input_curved"
                android:hint="Optional note..."
                android:textColor="#FFFFFF"
                android:textColorHint="#64748B"
                android:padding="15dp"
                android:gravity="top"
                android:layout_marginBottom="25dp"/>

            <!-- ðŸ’š Save Button -->
            <Button
                android:id="@+id/btnSaveIncome"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Save Income"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/bg_button_green"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
